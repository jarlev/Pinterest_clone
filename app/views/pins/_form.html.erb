
<%= form_for @pin, html: { multipart: true } do |f| %>
  <%= f.file_field :image %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.hidden_field :username, value: current_user.username %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
